{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@portfolio/tsconfig/node.json",
    "compilerOptions": {
        "baseUrl": ".",
        "composite": true,
        "outDir": "./dist",
        "paths": {
            "~/*": [
                "./cli/*"
            ]
        },
        "rootDir": ".",
        "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
        "typeRoots": [
            "../../node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "cli/**/*.ts"
    ]
}
