{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@portfolio/tsconfig/node.json",
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": ".",
        "paths": {
            "~/*": ["./*"]
        },
        "typeRoots": ["../node_modules/@types"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
