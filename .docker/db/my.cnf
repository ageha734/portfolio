# MySQL Configuration for Portfolio Development
# Optimized for development with performance and debugging capabilities

[mysqld]
# Character set and collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# Timezone
default-time-zone = '+00:00'

# Logging configuration
# General query log (useful for debugging)
general_log = 1
general_log_file = /var/log/mysql/general.log
log_error = /var/log/mysql/error.log

# Slow query log (queries taking longer than 2 seconds)
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = 1

# Connection settings
max_connections = 200
max_connect_errors = 10000
wait_timeout = 28800
interactive_timeout = 28800
connect_timeout = 10

# InnoDB settings (optimized for development)
innodb_buffer_pool_size = 1G
innodb_log_file_size = 256M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1
innodb_read_io_threads = 4
innodb_write_io_threads = 4

# Query cache (disabled in MySQL 8.0, but kept for reference)
# query_cache_type = 0
# query_cache_size = 0

# Table cache
table_open_cache = 2000
table_definition_cache = 1400

# Temporary tables
tmp_table_size = 64M
max_heap_table_size = 64M

# Sort and join buffers
sort_buffer_size = 2M
join_buffer_size = 2M
read_buffer_size = 2M
read_rnd_buffer_size = 4M

# Binary logging (useful for replication and point-in-time recovery)
log_bin = /var/log/mysql/mysql-bin.log
binlog_format = ROW
binlog_expire_logs_seconds = 604800
max_binlog_size = 100M

# Performance schema (useful for monitoring)
performance_schema = ON

# SQL mode (strict mode for better data integrity)
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

# Security settings
local_infile = 0
secure_file_priv = /var/lib/mysql-files/

# Skip name resolution for faster connections
skip-name-resolve

# Disable symbolic links for security
symbolic-links = 0

[client]
default-character-set = utf8mb4
port = 3306

[mysql]
default-character-set = utf8mb4
prompt = '\u@\h [\d]> '

[mysqldump]
quick
quote-names
max_allowed_packet = 16M
default-character-set = utf8mb4
