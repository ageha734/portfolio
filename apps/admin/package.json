{
    "private": true,
    "name": "@portfolio/admin",
    "type": "module",
    "scripts": {
        "build": "tsc && vite build",
        "clean": "git clean -xdf .cache .turbo node_modules dist",
        "coverage": "vitest run --coverage",
        "deploy": "wrangler pages deploy ./build --project-name portfolio-admin --branch master",
        "dev": "vite",
        "e2e": "docker run --rm -e CI=true -v $(pwd):/work -w /work -v $(pwd)/node_modules:/work/node_modules -v $(pwd)/docs/playwright/report:/work/docs/playwright/report portfolio-e2e bunx playwright test",
        "fmt": "biome format --write .",
        "fmt:check": "biome format .",
        "generate": "wrangler types",
        "lint": "biome lint .",
        "lint:fix": "biome lint --write .",
        "test": "vitest run",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@portfolio/api": "workspace:*",
        "@portfolio/cms": "workspace:*",
        "@portfolio/ui": "workspace:*",
        "@tanstack/react-router": "1.147.3",
        "@trpc/client": "11.0.0",
        "react": "18.3.1",
        "react-dom": "18.3.1"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "4.20260101.0",
        "@portfolio/biome-config": "workspace:*",
        "@portfolio/playwright-config": "workspace:*",
        "@portfolio/tsconfig": "workspace:*",
        "@portfolio/ui": "workspace:*",
        "@portfolio/vite-config": "workspace:*",
        "@portfolio/vitest-config": "workspace:*",
        "@tanstack/router-plugin": "1.147.3",
        "@tanstack/router-vite-plugin": "1.147.3",
        "@types/react": "18.3.12",
        "@types/react-dom": "18.3.1",
        "@vitejs/plugin-react": "5.1.2",
        "react-router": "7.11.0",
        "typescript": "5.9.3",
        "vite": "5.4.0",
        "vitest": "3.2.4",
        "wrangler": "4.54.0"
    },
    "peerDependencies": {
        "wrangler": "4.54.0"
    }
}
