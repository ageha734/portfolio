{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@portfolio/tsconfig/node.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "types": ["@cloudflare/workers-types", "vitest/globals"]
    },
    "include": ["app/**/*", "src/**/*"],
    "exclude": ["node_modules", "dist"]
}
