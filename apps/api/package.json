{
  "private": true,
  "version": "1.0.1",
  "name": "@portfolio/cms",
  "type": "module",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "main": "./src/index.ts",
  "scripts": {
    "build": "bun run with-env wrangler deploy --dry-run",
    "clean": "git clean -xdf .cache .turbo node_modules dist .wrangler",
    "coverage": "vitest run --coverage",
    "deploy": "wrangler deploy",
    "dev": "bun run with-env wrangler dev",
    "e2e": "docker run --rm -e CI=true -v $(pwd):/work -w /work -v $(pwd)/node_modules:/work/node_modules -v $(pwd)/docs/playwright/report:/work/docs/playwright/report -v $(pwd)/docs/security/e2e:/work/docs/security/e2e e2e",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "generate": "wrangler types",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@portfolio/api": "workspace:*",
    "@portfolio/auth": "workspace:*",
    "@portfolio/cache": "workspace:*",
    "@portfolio/db": "workspace:*",
    "@portfolio/log": "workspace:*",
    "hono": "4.6.11"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "1.12.3",
    "@cloudflare/workers-types": "4.20260101.0",
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@portfolio/vitest-config": "workspace:*",
    "dotenv": "17.2.3",
    "typescript": "5.9.3",
    "vite": "6.1.0",
    "vitest": "3.2.4",
    "wrangler": "4.54.0"
  },
  "peerDependencies": {
    "wrangler": "4.54.0"
  }
}
