{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                "build/**"
            ],
            "env": [
                "NODE_ENV",
                "CI"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^lint"],
            "outputs": []
        },
        "lint:fix": {
            "dependsOn": ["^lint:fix"],
            "cache": false
        },
        "fmt": {
            "dependsOn": ["^fmt"],
            "outputs": []
        },
        "fmt:check": {
            "dependsOn": ["^fmt:check"],
            "outputs": []
        },
        "typecheck": {
            "dependsOn": ["^typecheck"],
            "outputs": []
        },
        "test": {
            "dependsOn": ["^build"],
            "env": [
                "NODE_ENV",
                "CI"
            ]
        },
        "coverage": {
            "dependsOn": ["^build"],
            "outputs": [
                ".coverage/**"
            ],
            "env": [
                "NODE_ENV",
                "CI"
            ]
        },
        "e2e": {
            "dependsOn": ["build"],
            "outputs": [
                ".results/**",
                ".reports/**"
            ],
            "env": [
                "NODE_ENV",
                "CI"
            ]
        },
        "deploy": {
            "dependsOn": ["^build"],
            "outputs": []
        }
    }
}
