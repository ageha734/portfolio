{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        ".env"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "build/**",
                "dist/**"
            ]
        },
        "@portfolio/cms#build": {
            "outputs": []
        },
        "build:ui": {
            "cache": true
        },
        "clean": {
            "cache": false
        },
        "coverage": {
            "dependsOn": [
                "^build"
            ],
            "env": [
                "NODE_ENV",
                "CI"
            ],
            "outputs": [
                ".coverage/**"
            ]
        },
        "deploy": {
            "dependsOn": [
                "^build"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "e2e": {
            "dependsOn": [
                "^build",
                "^e2e"
            ],
            "env": [
                "NODE_ENV",
                "CI"
            ],
            "outputs": [
                ".results/**",
                ".reports/**"
            ]
        },
        "fmt": {
            "cache": true
        },
        "fmt:check": {
            "cache": true
        },
        "generate": {
            "cache": false
        },
        "lint": {
            "cache": true
        },
        "lint:fix": {
            "cache": true
        },
        "studio": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "env": [
                "NODE_ENV",
                "CI"
            ]
        },
        "typecheck": {
            "dependsOn": [
                "^build",
                "^typecheck"
            ]
        }
    }
}
