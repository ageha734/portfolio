{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "build/**",
                "dist/**"
            ]
        },
        "clean": {
            "cache": false
        },
        "coverage": {
            "dependsOn": [
                "^build"
            ],
            "env": [
                "NODE_ENV",
                "CI"
            ],
            "outputs": [
                ".coverage/**"
            ]
        },
        "deploy": {
            "dependsOn": [
                "^build"
            ],
            "outputs": []
        },
        "dev": {
            "dependsOn": [
                "^studio"
            ],
            "cache": false,
            "persistent": true
        },
        "e2e": {
            "dependsOn": [
                "build"
            ],
            "env": [
                "NODE_ENV",
                "CI"
            ],
            "outputs": [
                ".results/**",
                ".reports/**"
            ]
        },
        "fmt": {
            "dependsOn": [
                "^fmt"
            ],
            "outputs": []
        },
        "fmt:check": {
            "dependsOn": [
                "^fmt:check"
            ],
            "outputs": []
        },
        "generate": {
            "cache": false
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ],
            "outputs": []
        },
        "lint:fix": {
            "cache": false,
            "dependsOn": [
                "^lint:fix"
            ]
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "env": [
                "NODE_ENV",
                "CI"
            ]
        },
        "typecheck": {
            "dependsOn": [
                "^build",
                "^typecheck"
            ],
            "outputs": []
        }
    }
}
