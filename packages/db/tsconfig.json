{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@portfolio/tsconfig/node.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "~/*": ["./src/*"]
        },
        "typeRoots": ["../../node_modules"],
        "types": ["@cloudflare/workers-types"]
    },
    "include": ["src/**/*", "prisma/**/*"],
    "exclude": ["node_modules", "dist"]
}
