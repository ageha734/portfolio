{
  "private": true,
  "name": "@portfolio/db",
  "type": "module",
  "types": "./src/index.d.ts",
  "scripts": {
    "build": "run-s push migrate seed",
    "clean": "git clean -xdf .cache .turbo node_modules dist",
    "coverage": "vitest run --coverage",
    "deploy": "wrangler d1 deploy",
    "dev": "prisma studio --browser none",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "generate": "prisma generate",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "migrate": "wrangler d1 migrations apply",
    "push": "bunx dotenv-cli -e ../../.env -- prisma db push",
    "seed": "bun run src/seed.ts",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/adapter-d1": "5.22.0",
    "@prisma/client": "5.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20260101.0",
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@portfolio/vitest-config": "workspace:*",
    "npm-run-all2": "8.0.4",
    "prisma": "5.22.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4",
    "wrangler": "4.54.0"
  },
  "peerDependencies": {
    "wrangler": "4.54.0"
  },
  "main": "./src/index.ts"
}
