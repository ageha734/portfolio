{
    "name": "@portfolio/db",
    "private": true,
    "type": "module",
    "main": "./src/index.ts",
    "types": "./src/index.d.ts",
    "scripts": {
        "clean": "git clean -xdf .cache .turbo node_modules dist",
        "generate": "prisma generate",
        "dev": "prisma studio --browser none",
        "build": "run-s push migrate seed",
        "push": "prisma db push",
        "migrate": "wrangler d1 migrations apply",
        "seed": "bun run src/seed.ts",
        "lint": "biome lint .",
        "lint:fix": "biome lint --write .",
        "fmt": "biome format --write .",
        "fmt:check": "biome format .",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "coverage": "vitest run --coverage",
        "deploy": "wrangler d1 deploy"
    },
    "dependencies": {
        "@prisma/adapter-d1": "5.22.0",
        "@prisma/client": "5.22.0"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "4.20260101.0",
        "@portfolio/biome-config": "workspace:*",
        "@portfolio/tsconfig": "workspace:*",
        "@portfolio/vitest-config": "workspace:*",
        "npm-run-all2": "8.0.4",
        "prisma": "5.22.0",
        "typescript": "5.9.3",
        "vitest": "3.2.4",
        "wrangler": "4.54.0"
    },
    "peerDependencies": {
        "wrangler": "4.54.0"
    }
}
