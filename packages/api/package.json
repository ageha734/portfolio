{
  "private": true,
  "name": "@portfolio/api",
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "main": "./dist/src/index.js",
  "scripts": {
    "build": "tsc --outDir dist",
    "build:ui": "redoc-cli bundle openapi.yaml --output ../../apps/wiki/reference/index.html",
    "clean": "git clean -xdf .cache .turbo node_modules dist",
    "coverage": "vitest run --coverage",
    "dev": "tsc --watch --outDir dist",
    "studio": "redoc-cli serve openapi.yaml --port 28080",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "generate": "tsp compile schema/api.tsp && orval",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "1.7.9"
  },
  "devDependencies": {
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@portfolio/vitest-config": "workspace:*",
    "@typespec/compiler": "1.7.1",
    "@typespec/http": "1.7.0",
    "@typespec/openapi3": "1.7.0",
    "@redocly/cli": "1.20.0",
    "orval": "7.17.2",
    "redoc-cli": "0.13.21",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  }
}
