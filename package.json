{
    "private": true,
    "name": "portfolio",
    "description": "Portfolio site for ageha734",
    "engines": {
        "bun": "1.1.43",
        "node": "20.11.0"
    },
    "sideEffects": false,
    "type": "module",
    "scripts": {
        "setup": "bun run prepare",
        "prepare": "./scripts/install.sh",
        "dev": "concurrently -n remix,ui -c \"blue,green\" \"bun run dev:remix\" \"bun run dev:ui\"",
        "dev:remix": "remix vite:dev --port 5170",
        "dev:ui": "ladle serve --viteConfig vite.ladle.config.ts",
        "build": "bun run build:css && concurrently -n remix,ui -c \"blue,green\" \"bun run build:remix\" \"bun run build:ui\"",
        "build:css": "postcss app/styles/tailwind.css --output ./app/styles/tailwind.css --config postcss.config.cjs",
        "build:remix": "remix vite:build",
        "build:ui": "ladle build",
        "deploy": "concurrently -n remix,ui -c \"blue,green\" \"bun run deploy:remix\" \"bun run deploy:ui\"",
        "deploy:remix": "wrangler pages deploy ./build/remix --project-name portfolio",
        "deploy:ui": "wrangler pages deploy ./build/ui --project-name portfolio-ui --branch master",
        "docs:build": "cd docs && bun run build",
        "docs:dev": "cd docs && bun run start",
        "docs:serve": "cd docs && bun run serve",
        "tsp:compile": "tsp compile .",
        "tsp:watch": "tsp compile --watch .",
        "fmt": "concurrently -n fmt:md:fix,fmt:ts:fix,fmt:shell:fix,fmt:actions:fix -c \"blue,green,yellow,purple\" \"bun run fmt:md:fix\" \"bun run fmt:ts:fix\" \"bun run fmt:shell:fix\" \"bun run fmt:actions:fix\"",
        "fmt:check": "concurrently -n fmt:md:check,fmt:ts:check,fmt:shell:check,fmt:actions:check -c \"blue,green,yellow,purple\" \"bun run fmt:md:check\" \"bun run fmt:ts:check\" \"bun run fmt:shell:check\" \"bun run fmt:actions:check\"",
        "fmt:md:check": "biome --check ${@:-\"docs/**/*.md\"}",
        "fmt:md:fix": "biome --write ${@:-\"docs/**/*.md\"}",
        "fmt:ts:check": "biome format --check ${@:-\"app/**/*.{ts,tsx}\"}",
        "fmt:ts:fix": "biome format --write ${@:-\"app/**/*.{ts,tsx}\"}",
        "fmt:shell:check": "go run mvdan.cc/sh/v3/cmd/shfmt@v3.12.0 -l -d ${@:-scripts/*.sh}",
        "fmt:shell:fix": "go run mvdan.cc/sh/v3/cmd/shfmt@v3.12.0 -w ${@:-scripts/*.sh}",
        "fmt:actions:check": "go run github.com/google/yamlfmt/cmd/yamlfmt@v0.20.0 -lint -gitignore_excludes ${@:-.github/**/*.yml}",
        "fmt:actions:fix": "go run github.com/google/yamlfmt/cmd/yamlfmt@v0.20.0 -gitignore_excludes ${@:-.github/**/*.yml}",
        "lint": "concurrently -n lint:md:check,lint:ts:check,lint:shell:check,lint:actions:check -c \"blue,green,yellow,purple\" \"bun run lint:md:check\" \"bun run lint:ts:check\" \"bun run lint:shell:check\" \"bun run lint:actions:check\"",
        "lint:fix": "concurrently -n lint:md:fix,lint:ts:fix,lint:shell:fix,lint:actions:fix -c \"blue,green,yellow,purple\" \"bun run lint:md:fix\" \"bun run lint:ts:fix\" \"bun run lint:shell:fix\" \"bun run lint:actions:fix\"",
        "lint:md:check": "markdownlint-cli2 ${@:-\"docs/**/*.md\"}",
        "lint:md:fix": "markdownlint-cli2 --fix ${@:-\"docs/**/*.md\"}",
        "lint:ts:check": "biome lint --check ${@:-\"app/**/*.{ts,tsx}\"}",
        "lint:ts:fix": "biome lint --write ${@:-\"app/**/*.{ts,tsx}\"}",
        "lint:shell:check": "docker run --rm -v $(pwd):/work -w /work -v /work/node_modules koalaman/shellcheck:v0.11.0 ${@:-scripts/*.sh}",
        "lint:actions:check": "run-p lint:actions:*:check",
        "lint:actions:static:check": "go run github.com/rhysd/actionlint/cmd/actionlint@v1.7.9",
        "lint:actions:policy:check": "go run github.com/suzuki-shunsuke/ghalint/cmd/ghalint@v1.5.4 run ${@:-.github/**/*.yml}",
        "test": "cross-env NODE_ENV=test vitest run",
        "coverage": "cross-env NODE_ENV=test vitest run --coverage",
        "generate": "orval",
        "lighthouse": "lhci autorun",
        "e2e:docker": "playwright test",
        "e2e:docker:snapshot": "playwright test --project=chromium --update-snapshots",
        "e2e": "docker build -t e2e -f tests/e2e/Dockerfile . && docker run --rm -e CI=true -v $(pwd):/work -w /work -v $(pwd)/node_modules:/work/node_modules -v $(pwd)/docs/playwright-report:/work/docs/playwright-report e2e bun run e2e:docker",
        "snapshot": "docker build -t e2e -f tests/e2e/Dockerfile . && docker run --rm -e CI=true -v $(pwd):/work -w /work -v $(pwd)/node_modules:/work/node_modules portfolio-e2e bun run e2e:docker:snapshot",
        "ladle": "playwright test --config=playwright.ladle.config.ts",
        "typecheck": "tsc -p ./tsconfig.json -b",
        "typegen": "wrangler types",
        "with-env": "dotenv -e ../../.env --"
    },
    "dependencies": {
        "@fireworks-js/react": "2.10.8",
        "@graphcms/rich-text-react-renderer": "0.6.2",
        "@ladle/react": "5.1.1",
        "@mdx-js/react": "3.1.1",
        "@remix-run/cloudflare": "2.17.2",
        "@remix-run/cloudflare-pages": "2.17.2",
        "@remix-run/react": "2.17.2",
        "@remix-run/server-runtime": "2.17.2",
        "classnames": "2.5.1",
        "date-fns": "4.1.0",
        "dotenv": "17.2.3",
        "fireworks-js": "2.10.8",
        "framer-motion": "12.23.26",
        "gsap": "3.14.2",
        "i18next": "25.7.3",
        "isbot": "5.1.32",
        "miniflare": "4.20251217.0",
        "prismjs": "1.30.0",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "react-i18next": "16.5.1",
        "reading-time": "1.5.0",
        "rehype-img-size": "1.0.1",
        "rehype-slug": "6.0.0",
        "three": "0.182.0",
        "three-stdlib": "2.36.1",
        "zod": "4.3.4"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.10",
        "@cloudflare/workers-types": "4.20260101.0",
        "@commitlint/cli": "20.3.0",
        "@commitlint/config-conventional": "20.3.0",
        "@csstools/postcss-global-data": "3.1.0",
        "@lhci/cli": "0.15.1",
        "@mapbox/rehype-prism": "0.9.0",
        "@mdx-js/rollup": "3.1.1",
        "@playwright/test": "1.57.0",
        "@proofdict/textlint-rule-proofdict": "3.1.2",
        "@remix-run/dev": "2.17.2",
        "@swc/core": "1.15.8",
        "@swc/helpers": "0.5.18",
        "@tailwindcss/postcss": "4.1.18",
        "@tailwindcss/typography": "0.5.19",
        "@testing-library/jest-dom": "6.9.1",
        "@testing-library/react": "16.3.1",
        "@testing-library/user-event": "14.6.1",
        "@types/bun": "1.3.5",
        "@types/gtag.js": "0.0.20",
        "@types/prismjs": "1.26.5",
        "@types/react": "18.3.12",
        "@types/react-dom": "18.3.1",
        "@typespec/compiler": "1.7.1",
        "@typespec/http": "1.7.0",
        "@typespec/openapi3": "1.7.0",
        "@vitejs/plugin-react": "5.1.2",
        "@vitest/coverage-v8": "3.2.4",
        "@vitest/ui": "3.2.4",
        "autoprefixer": "10.4.23",
        "codeceptjs": "3.7.5",
        "concurrently": "9.2.1",
        "cross-env": "10.1.0",
        "cspell": "8.15.0",
        "cssnano": "7.1.2",
        "jsdom": "27.4.0",
        "lefthook": "2.0.13",
        "lint-staged": "16.2.7",
        "markdownlint-cli2": "0.12.1",
        "msw": "2.12.7",
        "orval": "7.17.2",
        "playwright": "1.57.0",
        "postcss": "8.5.6",
        "postcss-cli": "11.0.1",
        "postcss-custom-media": "11.0.6",
        "postcss-import": "16.1.1",
        "postcss-load-config": "6.0.1",
        "postcss-preset-env": "10.6.0",
        "regenerator-runtime": "0.14.1",
        "remark-frontmatter": "5.0.0",
        "remark-mdx-frontmatter": "5.2.0",
        "tailwindcss": "4.1.18",
        "tailwindcss-animate": "1.0.7",
        "textlint": "13.3.3",
        "textlint-filter-rule-allowlist": "4.0.0",
