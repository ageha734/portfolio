        "tailwindcss": "3.4.17",
        "tailwindcss-animate": "1.0.7",
        "typescript": "5.7.3",
        "vite": "6.0.7",
        "vite-tsconfig-paths": "5.1.4",
        "vitest": "2.1.8",
        "wrangler": "3.101.0"
    },
    "peerDependencies": {
        "chai": "5.1.2",
        "react": "19.0.0",
        "react-dom": "19.0.0"
    }
}
