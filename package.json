{
    "name": "portfolio",
    "homepage": "https://ageha734.jp",
    "description": "Portfolio site for ageha734",
    "repository": "https://github.com/ageha734/portfolio.git",
    "author": "ageha734",
    "engines": {
        "node": "20.11.0",
        "bun": "1.1.43"
    },
    "private": true,
    "sideEffects": false,
    "type": "module",
    "scripts": {
        "build:css": "tailwindcss --output ./app/styles/tailwind.css --minify",
        "build:remix": "remix vite:build",
        "build:ui": "ladle build",
        "build": "run-s build:**",
        "deploy:remix": "wrangler pages deploy ./build/client --project-name portfolio",
        "deploy:ui": "wrangler pages deploy ./output --project-name portfolio-ui --branch master",
        "deploy": "run-s deploy:**",
        "dev:remix": "remix vite:dev --port 5170",
        "dev:ui": "ladle serve --viteConfig vite.ladle.config.ts",
        "dev": "run-p dev:**",
        "fmt:fix": "biome format --write ./app ./test",
        "fmt": "biome format ./app ./test",
        "lint:fix": "biome lint --write ./app ./test",
        "lint": "biome lint ./app ./test",
        "prepare": "lefthook install",
        "start": "cross-env NODE_ENV=production wrangler pages dev ./build/client",
        "test:e2e": "npm run test:e2e:dev --silent",
        "test:e2e:dev": "playwright test --ui",
        "pretest:e2e:run": "pnpm run build",
        "test:e2e:run": "cross-env CI=true playwright test",
        "test:e2e:install": "npx playwright install --with-deps chromium",
        "test:e2e:ci": "pnpm run test:e2e:install && pnpm run test:e2e:run",
        "typecheck": "tsc -p ./tsconfig.json -b",
        "typegen": "wrangler types",
        "vitest:coverage": "cross-env NODE_ENV=test vitest run --coverage",
        "vitest": "cross-env NODE_ENV=test vitest",
        "with-env": "dotenv -e ../../.env --"
    },
    "dependencies": {
        "@fireworks-js/react": "2.10.8",
        "@graphcms/rich-text-react-renderer": "0.6.2",
        "@ladle/react": "5.0.1",
        "@mdx-js/react": "3.1.0",
        "@remix-run/cloudflare": "2.15.2",
        "@remix-run/cloudflare-pages": "2.15.2",
        "@remix-run/react": "2.15.2",
        "@remix-run/server-runtime": "2.15.2",
        "classnames": "2.5.1",
        "date-fns": "4.1.0",
        "dotenv": "16.4.7",
        "fireworks-js": "2.10.8",
        "framer-motion": "11.17.0",
        "gsap": "3.12.5",
        "i18next": "24.2.1",
        "isbot": "5.1.21",
        "miniflare": "3.20241230.1",
        "prismjs": "1.29.0",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "react-i18next": "15.4.0",
        "reading-time": "1.5.0",
        "rehype-img-size": "1.0.1",
        "rehype-slug": "6.0.0",
        "three": "0.172.0",
        "three-stdlib": "2.35.7",
        "zod": "3.24.1"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@cloudflare/workers-types": "4.20250109.0",
        "@csstools/postcss-global-data": "3.0.0",
        "@mapbox/rehype-prism": "0.9.0",
        "@mdx-js/rollup": "3.1.0",
        "@playwright/test": "1.49.1",
        "@remix-run/dev": "2.15.2",
        "@swc/core": "1.10.7",
        "@swc/helpers": "0.5.15",
        "@tailwindcss/typography": "0.5.16",
        "@testing-library/jest-dom": "6.6.3",
        "@testing-library/react": "16.1.0",
        "@testing-library/user-event": "14.5.2",
        "@types/bun": "1.1.16",
        "@types/gtag.js": "0.0.20",
        "@types/prismjs": "1.26.5",
        "@types/react": "19.0.8",
        "@types/react-dom": "19.0.3",
        "@vitejs/plugin-react": "4.3.4",
        "@vitest/coverage-v8": "2.1.8",
        "autoprefixer": "10.4.20",
        "codeceptjs": "3.6.10",
        "cross-env": "7.0.3",
        "cssnano": "7.0.6",
        "jsdom": "26.0.0",
        "lefthook": "1.10.3",
        "msw": "2.7.0",
        "npm-run-all2": "7.0.2",
        "playwright": "1.49.1",
        "postcss": "8.4.49",
