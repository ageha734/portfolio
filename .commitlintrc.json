{
  "$schema": "https://commitlint.js.org/schema.json",
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "improvement",
        "security"
      ]
    ],
    "header-max-length": [0],
    "body-max-length": [0],
    "body-max-line-length": [0],
    "footer-max-length": [0],
    "footer-max-line-length": [0],
    "subject-case": [0],
    "subject-empty": [0],
    "subject-full-stop": [0],
    "type-case": [0],
    "type-empty": [0],
    "body-leading-blank": [0],
    "body-min-length": [0],
    "footer-leading-blank": [0],
    "scope-case": [0],
    "scope-empty": [0],
    "scope-enum": [0],
    "scope-max-length": [0],
    "scope-min-length": [0],
    "subject-max-length": [0],
    "subject-min-length": [0]
  }
}
