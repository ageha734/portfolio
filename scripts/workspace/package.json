{
  "private": true,
  "version": "1.0.1",
  "name": "@portfolio/scripts-workspace",
  "type": "module",
  "scripts": {
    "build": "bun build cmd/main.ts --outdir dist/cmd --target bun --format esm --external bun --minify && chmod +x dist/cmd/main.js",
    "clean": "git clean -xdf .cache .turbo node_modules dist",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "start": "node ./dist/cmd/main.js",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@types/bun": "1.3.5",
    "@types/node": "25.0.3",
    "cac": "6.7.14",
    "picocolors": "1.1.1",
    "typescript": "5.9.3"
  },
  "bin": {
    "workspace": "./dist/cmd/main.js"
  }
}
