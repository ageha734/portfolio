{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": ["@portfolio/tsconfig/compiled-package.json"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": ["./routines/*"]
        },
        "rootDir": ".",
        "typeRoots": ["../../node_modules/@types"],
        "types": ["node"]
    },
    "exclude": ["node_modules", "dist"],
    "include": ["routines/*.ts", "cmd/main.ts"]
}
