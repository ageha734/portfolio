{
  "private": true,
  "version": "1.0.0",
  "name": "@portfolio/infra",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo node_modules dist",
    "config": "pulumi config set",
    "destroy": "pulumi destroy",
    "dev": "tsc --watch",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "generate": "bun run build && node dist/generators/index.js",
    "generate:dev": "tsx src/generators/index.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "preview": "pulumi preview",
    "refresh": "pulumi refresh",
    "graph": "pulumi stack graph graph.dot && dot -Tpng graph.dot -o architecture.png",
    "stack:init": "pulumi stack init",
    "stack:select": "pulumi stack select",
    "typecheck": "tsc --noEmit",
    "up": "pulumi up"
  },
  "dependencies": {
    "@pulumi/cloudflare": "5.45.0",
    "@pulumi/pulumi": "3.142.0",
    "@pulumi/random": "4.16.7",
    "@pulumiverse/doppler": "0.9.0",
    "@pulumiverse/grafana": "2.19.0",
    "@pulumiverse/sentry": "0.0.9",
    "@rediscloud/pulumi-rediscloud": "1.3.3"
  },
  "devDependencies": {
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@types/node": "25.0.3",
    "tsx": "4.19.2",
    "typescript": "5.9.3"
  },
  "pulumi": {
    "main": "dist/index.js"
  }
}
