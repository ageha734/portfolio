{
  "private": true,
  "version": "1.0.0",
  "name": "@portfolio/infra",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo node_modules dist",
    "config:set": "pulumi config set",
    "config:set-secret": "pulumi config set --secret",
    "destroy": "pulumi destroy",
    "dev": "tsc --watch",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "preview": "pulumi preview",
    "refresh": "pulumi refresh",
    "stack:graph": "pulumi stack graph graph.dot && dot -Tpng graph.dot -o architecture.png",
    "stack:graph:svg": "pulumi stack graph graph.dot && dot -Tsvg graph.dot -o architecture.svg",
    "stack:init": "pulumi stack init",
    "stack:select": "pulumi stack select",
    "typecheck": "tsc --noEmit",
    "up": "pulumi up"
  },
  "dependencies": {
    "@pulumi/cloudflare": "5.45.0",
    "@pulumi/pulumi": "3.142.0",
    "@pulumi/random": "4.16.7",
    "@pulumiverse/doppler": "0.9.0",
    "@pulumiverse/grafana": "2.19.0"
  },
  "devDependencies": {
    "@portfolio/biome-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@types/node": "22.10.5",
    "typescript": "5.9.3"
  },
  "pulumi": {
    "main": "dist/index.js"
  }
}
