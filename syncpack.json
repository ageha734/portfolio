{
    "$schema": "https://raw.githubusercontent.com/JamieMason/syncpack/main/config.schema.json",
    "source": [
        "package.json",
        "apps/*/package.json",
        "packages/*/package.json",
        "tooling/*/package.json",
        "testing/*/package.json"
    ],
    "dependencyTypes": [
        "dev",
        "peer",
        "prod"
    ],
    "semverGroups": [
        {
            "label": "Use exact versions for workspace packages",
            "packages": ["**"],
            "dependencies": ["@portfolio/**"],
            "range": ""
        }
    ],
    "versionGroups": [
        {
            "label": "Pin workspace packages to exact versions",
            "packages": ["**"],
            "dependencies": ["@portfolio/**"],
            "pinVersion": true
        }
    ],
    "semverRange": "^",
    "sortAz": [
        "contributors",
        "dependencies",
        "devDependencies",
        "keywords",
        "peerDependencies",
        "resolutions",
        "scripts"
    ],
    "sortFirst": [
        "name",
        "description",
        "version",
        "private"
    ]
}
