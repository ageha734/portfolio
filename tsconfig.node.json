{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "lib": ["ES2022"],
        "types": ["node", "@cloudflare/workers-types/2023-07-01"],
        "module": "ESNext",
        "moduleResolution": "bundler"
    },
    "include": [
        "env.d.ts",
        "codecept.conf.ts",
        "orval.config.ts",
        "playwright.config.ts",
        "playwright.ladle.config.ts",
        "tailwind.config.ts"
    ],
    "exclude": [
        "node_modules",
        "app",
        "tests",
        "docs"
    ]
}
