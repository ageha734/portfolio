{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": ["@portfolio/tsconfig/node.json", "@portfolio/tsconfig/compiled-package.json"],
    "compilerOptions": {
        "paths": {
            "~/*": ["./src/*"]
        },
        "typeRoots": ["./node_modules"],
        "allowImportingTsExtensions": false,
        "rootDir": "./src"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
