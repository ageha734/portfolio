{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": ["@portfolio/tsconfig/compiled-package.json"],
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react-jsx",
        "paths": {
            "~/*": ["./src/*"]
        },
        "rootDir": "./src",
        "typeRoots": ["../../node_modules/@types"],
        "types": ["node"],
        "lib": ["DOM", "ES2022"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
