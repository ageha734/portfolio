{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": ["@portfolio/tsconfig/node.json", "@portfolio/tsconfig/compiled-package.json"],
    "compilerOptions": {
        "paths": {
            "~/*": ["./src/*"]
        },
        "typeRoots": ["../../node_modules/@types"],
        "rootDir": "./src"
    },
    "include": ["**/*.ts", "**/*.js"],
    "exclude": ["node_modules"]
}
