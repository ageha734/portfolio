{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": ["@portfolio/tsconfig/react.json", "@portfolio/tsconfig/compiled-package.json"],
    "compilerOptions": {
        "paths": {
            "~/*": ["./src/*"]
        },
        "allowImportingTsExtensions": false,
        "skipLibCheck": true,
        "rootDir": "./src"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
}
