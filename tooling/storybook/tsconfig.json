{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@portfolio/tsconfig/react.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {},
        "rootDir": "./src",
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "outDir": "./dist",
        "declaration": true,
        "emitDeclarationOnly": false,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
}
