{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "${configDir}/dist",
        "rootDir": "${configDir}/src",
        "noEmit": false,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "paths": {
            "~/*": ["${configDir}/src/*"]
        }
    }
}
