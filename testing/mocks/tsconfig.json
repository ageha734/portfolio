{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@portfolio/tsconfig/node.json",
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "~/*": ["./src/*"],
        },
    },
    "include": ["src", "src/handlers", "*.ts"],
    "exclude": ["node_modules", "dist"],
}
